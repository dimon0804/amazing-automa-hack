pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Install Node') {
      steps {
        sh 'node -v || curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && apt-get install -y nodejs'
      }
    }
    stage('Install deps') {
      steps {
        sh 'npm ci || npm install'
      }
    }
    stage('Build') {
      steps { sh 'node bin/automata.js run --stage build' }
    }
    stage('Test') {
      steps { sh 'node bin/automata.js run --stage test' }
    }
    stage('Deploy') {
      when { branch 'main' }
      steps { sh 'node bin/automata.js run --stage deploy' }
    }
  }
}


